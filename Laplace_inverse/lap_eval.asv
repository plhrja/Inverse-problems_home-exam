% Routine evaluates the Laplace transform of the characteristic
% function (see f_eval.m) at given point
%
% Author: RS

function lapt = lap_eval(s, k)
    t_vec = linspace(0, 1, k);
    t_k = t_vec(k);
    lapt = zeros(k, 1);
    
    for ii = 1:length(s)
       lapt(ii) = t_k/k .* (sum(exp(s(ii) .* t_vec) .* f_eval(t_vec)) - (0.5.*(1 + exp(s(ii).*t_vec(k)).*f_eval(t_vec(t_k)))));   
    end
end